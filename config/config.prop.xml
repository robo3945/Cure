<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
  <properties>

	    
	<!-- *********** FOR CC ************* -->
    <entry key="cc.delay.response.check">-1</entry>
    <entry key="cc.delay.timout.check">-1</entry>
    <entry key="cc.delay.timeline.check">-1</entry>
    
    <!--  This is the threshold  -->
    <entry key="cc.timout.threshold">5000</entry>
    
    <!--  This is for the timeline window  -->
    <entry key="cc.timeline.windowsize">10</entry>
    
    <!--  Sender delay time for every sent packet  -->
    <entry key="cc.delay.sender">2000</entry>
    
        <!-- UDP props -->
    <entry key="cc.udp.socketRecvBufSize">524280</entry>
    <entry key="cc.udp.socketTimeout">300000</entry>    
    <entry key="cc.udp.packetBufMaxLenght">4096</entry>
    
    <!-- *********** FOR GUEST/HOST *********** -->
    
    <entry key="delay.response.check">-1</entry>
    <entry key="delay.timout.check">-1</entry>
    <entry key="delay.timeline.check">-1</entry>
    
    <!--  This is the threshold  -->
    <entry key="timout.threshold">5000</entry>
    
    <!--  This is for the timeline window  -->
    <entry key="timeline.windowsize">10</entry>
    
    <!--  Sender delay time for every sent packet  -->
    <entry key="delay.sender">2000</entry>
    
        <!-- UDP props -->
    <entry key="udp.socketRecvBufSize">524280</entry>
    <entry key="udp.socketTimeout">300000</entry>    
    <entry key="udp.packetBufMaxLenght">4096</entry>
    
    <!-- *********** GENERAL SETTINGS *********** -->
    
    <entry key="commander.stop.ratio">1</entry>
    <!--  Simulation models  -->
    <entry key="simmodel.guest">it.cure.core.implem.simmodel.hackfail.ProbabHackFail_RESPONSE_TIMELINE_SimModel</entry>
    <entry key="simmodel.host">it.cure.core.implem.simmodel.hackfail.ProbabHackFail_NETWORK_SimModel</entry>
    
    <!--  Probabilities of failure and hacking  -->
	<entry key="fail.probab.guest">0.001</entry>
	<entry key="fail.probab.host">2</entry>
	<entry key="hack.probab.guest">5</entry>
	<entry key="hack.probab.host">2</entry>    
    
    <!-- How many guest are on every (simulated) host -->
    <entry key="guest.for.host">8</entry>
        	
	<!--  Response props  -->
	<entry key="response.saltLenght">8</entry>	    
	<entry key="response.challengeLenght">20</entry>	
	<entry key="response.challengeHashAlg">SHA-256</entry>

	<!--  Misc  -->
	<entry key="cypher.alg">AES</entry>
    <entry key="trace.rawNumBuffer">10</entry>    
    <entry key="charset">UTF-8</entry>
    
  </properties>
